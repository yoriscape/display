cc_binary {
    name: "libcomposertestservice",
    defaults: ["qtidisplay_defaults"],
    sanitize: {
        integer_overflow: true,
    },
    vendor: true,
    relative_install_path: "hw",
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
        "qti_display_kernel_headers",
        "device_kernel_headers",
    ],
    cflags: [
        "-Wno-missing-field-initializers",
        "-Wno-unused-parameter",
        "-DLOG_TAG=\"SDM_TEST_COMPOSER\"",
    ],

    shared_libs: [
        "libbinder",
        "libhardware",
        "libutils",
        "libcutils",
        "libsync",
        "libc++",
        "liblog",
        "libhidlbase",
        "libhardware_legacy",
        "libsdmcore",
        "libqdutils",
        "libqdMetaData",
        "libdisplaydebug",
        "libsdmutils",
        "libgrallocutils",
        "android.hardware.graphics.allocator-V2-ndk",
        "android.hardware.graphics.mapper@4.0",
        "vendor.qti.hardware.display.mapper@4.0",
        "libgralloc.qti",
        "libgralloctypes",
        "libdrm",
        "libc",
        "vendor.qti.hardware.display.mapperextensions@1.3",
        "vendor.qti.hardware.display.config-V5-ndk",
        "libbinder_ndk",
    ],

    static_libs: [
        "libaidlcommonsupport",
    ],
    srcs: [
        "sdm_comp_buffer_allocator.cpp",
        "sdm_comp_debugger.cpp",
        "composer_test_service.cpp",
        "ICompTestBndService.cpp",
        "comp_test_bnd_service.cpp"
    ],
    init_rc: ["libcomposertestservice.rc"],
}
